@model Student

<div class="col-sm-6 col-md-4">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Nume</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-6">
                <h4>Matricol</h4>
                <p>@Model.Matricol</p>
            </div>
            <div class="col-md-6">
                <h4>Media</h4>
                <p>@Model.media</p>
            </div>
        </div>

        <div class="panel-footer">
            <a class="btn btn-primary" asp-route-id="@Model.Id" asp-action="CalculateMark">Prezice media</a>
            <a class="btn btn-warning" asp-route-id="@Model.Id" asp-action="CalculateDay">Prezice ziua</a>
        </div>
    </div>
</div>